If:
  PathMatch: .*\.cu
  CompileFlags:
    Remove: [*]  # Verhindert, dass Clangd .cu-Dateien √ºberhaupt analysiert

CompileFlags:
  Add: [-std=c++23]  # C++23 explizit setzen

Diagnostics:
  UnusedIncludes: true
  ClangTidy:
    Add:
      - bugprone-*
      - performance-*
      - modernize-*
      - readability-identifier-naming
      - cppcoreguidelines-*

Index:
  Background: Build
  StandardLibrary: Yes

Hover:
  ShowAKA: true

Completion:
  AllScopes: true

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
