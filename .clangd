# Datei: .clangd
# Zeilen: 40
# üê≠ Maus-Kommentar: Waschb√§r-Kur f√ºr Clangd: .cu-Dateien nicht analysieren, CUDA-Toolchain explizit setzen, libdevice und includes per Hand nachreichen. Fix gegen sm_52/libdevice-Fehler. Schneefuchs empfiehlt: keine Magie ‚Äì exakte Pfade.

If:
  PathMatch: .*\.cu
  CompileFlags:
    Remove: [*]  # .cu-Dateien nicht analysieren, um Clangd-Stabilit√§t zu wahren

CompileFlags:
  Add: 
    - -std=c++23
    - -xc++
    - -fsyntax-only
    - "--cuda-path=C:/Program Files/NVIDIA GPU Computing Toolkit/CUDA/v12.9"
    - -nocudainc
    - -I"C:/Program Files/NVIDIA GPU Computing Toolkit/CUDA/v12.9/include"
    - -I"C:/Program Files/NVIDIA GPU Computing Toolkit/CUDA/v12.9/include/crt"
    - -I"${workspaceFolder}/src"
    - -I"${workspaceFolder}/include"
    - -I"${workspaceFolder}/external"
    - -I"${workspaceFolder}/build"
    - --cuda-gpu-arch=sm_89

Diagnostics:
  UnusedIncludes: true
  ClangTidy:
    Add:
      - bugprone-*
      - performance-*
      - modernize-*
      - readability-identifier-naming
      - cppcoreguidelines-*

Index:
  Background: Build
  StandardLibrary: Yes

Hover:
  ShowAKA: true

Completion:
  AllScopes: true

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
